{
  "name": {
    "en": "EvaPower",
    "nl": "EvaPower"
  },
  "class": "sensor",
  "capabilities": [
    "measure_power",
    "measure_battery",
    "measure_battery_level",
    "measure_pv_power",
    "measure_bat_power",
    "measure_grid_power",
    "measure_echarge",
    "measure_edischarge",
    "measure_time_to_empty",
    "measure_time_to_full",
    "measure_rendement_day"
