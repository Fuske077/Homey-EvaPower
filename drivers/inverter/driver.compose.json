  "pair": [
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_devices"
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ],
  "images": {
    "small": "drivers/inverter/assets/images/small-eva.png",
    "large": "drivers/inverter/assets/images/large-eva.png",
    "xlarge": "drivers/inverter/assets/images/xlarge-eva.png"
  }
